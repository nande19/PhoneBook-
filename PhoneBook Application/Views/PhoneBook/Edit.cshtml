@{
}

@model PhoneBook_Application.Models.Entities.People


@if (Model is null)
{
<p>
No contact was found with this ID
</p>
} 
else{

<div class="d-flex align-items-center mb-4">
    <h1 class="phone-book-heading me-3">Edit Contact</h1>

    <img src="/images/phone-book.png"
         alt="Logo"
         style="height: 30px; width: auto;" />
</div>

<form method="post">
    <div class="mt-3">
        <label class="form-label"
               style="font-size: 1.5rem;">ID</label>
        <input type="text"
               class="form-control"
               asp-for="Id" readonly/>

    </div>


    <div class="mt-3">
        <label class="form-label"
               style="font-size: 1.5rem;">Name</label>
        <input type="text"
               class="form-control"
               asp-for="Name" />
        <span asp-validation-for="Name"
              class="text-danger"></span>

    </div>

    <div class="mt-3">
        <label class="form-label"
               style="font-size: 1.5rem;">Phone Number</label>
        <input type="text"
               class="form-control"
               asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"
              class="text-danger"></span>

    </div>

    <div class="mt-3">
        <label class="form-label" style="font-size: 1.5rem;">Email</label>
        <input type="email"
               class="form-control"
               asp-for="Email" />
        <small class="form-text"
               style="color: red;
    font-size: 0.75rem;
    margin-top: 2px; display: block">EMAIL IS OPTIONAL</small>
        <span asp-validation-for="Email"
              class="text-danger"></span>


    </div>

        <div class="mt-3">
            <a href="/Phonebook/Table"
               class="btn btn-secondary">Back</a>
        </div>

    <div class="mt-3">

        <button type="submit" 
        class="btn btn-primary">Save</button>

    </div>
</form>

    <form method="post" asp-action="Delete" asp-controller="PhoneBook" style="display: inline-block;">
        <input type="hidden" asp-for="Id" />
        <div class="button-container">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
}